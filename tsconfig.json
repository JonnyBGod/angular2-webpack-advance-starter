{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "baseUrl": "./src",
    "paths": {
      "frameworks/*": [
        "app/frameworks/*"
      ],
      "components/*": [
        "app/components/*"
      ],
      "assets/*": [
        "app/assets/*"
      ]
    }
  },
  "exclude": [
    "desktop",
    "nativescript",
    "node_modules"
  ],
  "filesGlob": [
    "./src/app/**/*.ts",
    "./src/custom-typings.d.ts",
    "./typings/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
